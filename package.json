{
  "name": "bits-campus-connect",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:web": "pnpm --filter @bits-campus-connect/web dev",
    "dev:api": "pnpm --filter @bits-campus-connect/api dev",
    "build": "pnpm --filter @bits-campus-connect/shared build && pnpm --filter @bits-campus-connect/api build && pnpm --filter @bits-campus-connect/web build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "db:generate": "pnpm --filter @bits-campus-connect/api db:generate",
    "db:migrate": "pnpm --filter @bits-campus-connect/api db:migrate",
    "db:studio": "pnpm --filter @bits-campus-connect/api db:studio"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
